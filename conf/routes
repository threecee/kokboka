#DELETE     /json/shoppinglists/shoppinglistitem json.ShoppingLists.shoppinglistitem
#GET     /json/shoppinglists/shoppinglistitem json.ShoppingLists.shoppinglistitem


#OPTIONS /json/shoppinglists/shoppinglistitem json.ShoppingLists.getShoppinglistItem
