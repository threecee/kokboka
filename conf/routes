# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /oppskrifter/{<[0-9]+>id}             Application.show
GET     /oppskrifter/{tag}                    Application.listTagged

# Home page
GET     /                                       Application.index

# New route to ingredients method
GET     /ingredients                                  Application.ingredients

# New route to recipes method
GET     /recipes.json                                  Application.recipes_json

# Ignore favicon requests
GET     /favicon.ico                            404

# Import CRUD routes
*      /admin              module:crud

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
