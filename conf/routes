# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /oppskrifter/{<[0-9]+>id}             Recipes.show
GET     /oppskrifter/{tag}                    Recipes.listTagged
GET     /oppskrifter                            Recipes.index

# Home page
GET     /                                       Application.index

# New route to ingredients method
GET     /ingredients                                  Recipes.ingredients

# New route to recipes method
GET     /recipes.json                                  Recipes.recipes_json

# Ignore favicon requests
GET     /favicon.ico                            404


# Import Secure routes
*       /                                       module:secure

# Administration
GET     /admin/?                                Admin.index
*       /admin                                  module:crud

GET     /admin/mineoppskrifter/{id}                 Admin.form
POST    /admin/mineoppskrifter/{id}                 Admin.save
GET     /admin/new                          Admin.form
POST    /admin/new                          Admin.save
GET     /admin/menus/delete/{id}            Menus.delete


# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
